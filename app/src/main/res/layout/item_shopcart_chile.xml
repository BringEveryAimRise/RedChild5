<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/shopcart_fragment_item_chile_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:checked="true"
            android:button="@drawable/shopping_cart_checkbox"
             />

        <ImageView
            android:id="@+id/shopcart_fragment_item_chile_im"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shopcart_fragment_item_chile_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="￥ 308.00"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/shopcart_fragment_item_chile_sub"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/shoppingcart_sub_btn_enabled"

                        android:gravity="center"
                         />

                    <TextView
                        android:id="@+id/shopcart_fragment_item_chile_num"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/shoppingcart_numtext_bg"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="1"
                         />

                    <TextView
                        android:id="@+id/shopcart_fragment_item_chile_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/shoppingcart_add_btn_enabled"
                        android:gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/shopcart_fragment_item_chile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="第八号当铺美女一枚"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>